@page
@model RazorProject.Pages.Epics.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Epic</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epic.EpicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Epic.EpicName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epic.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Epic.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epic.Project)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="/Projects/Details" asp-route-id="@Model.Epic.ProjectId">@Html.DisplayFor(model => model.Epic.Project.ProjectName)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Epic.Tasks)
        </dt>
    </dl>
</div>
<div>
    <ul>
        @foreach(var item in Model.Epic.Tasks)
        {
        <li class="col-sm-10">
            <a asp-page="/Tasks/Details" asp-route-id="@item.TaskId">@Html.DisplayFor(modelItem => item.TaskName)</a>
        </li>
        }
    </ul>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Epic?.EpicId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
