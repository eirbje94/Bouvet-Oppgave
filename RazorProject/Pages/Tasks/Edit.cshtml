@page
@model RazorProject.Pages.Tasks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Task.TaskId" />
            <div class="form-group">
                <label asp-for="Task.TaskName" class="control-label"></label>
                <input asp-for="Task.TaskName" class="form-control" />
                <span asp-validation-for="Task.TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Epic.EpicName" class="control-label"></label>
                <select asp-for="Task.EpicId" class="form-select" asp-items="ViewBag.EpicId"></select>
                <span asp-validation-for="Task.EpicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Responsible.EmployeeName" class="control-label"></label>
                <select asp-for="Task.EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="Task.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
